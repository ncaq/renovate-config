{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "timezone": "Asia/Tokyo",
  "branchConcurrentLimit": 20,
  "labels": ["Type: Dependencies"],
  "semanticCommitType": "build",
  "vulnerabilityAlerts": {
    "enabled": true,
    "addLabels": ["Type: Security"]
  },
  "packageRules": [
    {
      "description": ["Dependabotが管理するエコシステムを無効化して重複PRを防止します"],
      "enabled": false,
      "matchManagers": [
        "bazel",
        "bazel-module",
        "bun",
        "bundler",
        "cargo",
        "composer",
        "devcontainer",
        "docker-compose",
        "dockerfile",
        "git-submodules",
        "github-actions",
        "gomod",
        "gradle",
        "gradle-wrapper",
        "helmv3",
        "maven",
        "maven-wrapper",
        "mix",
        "npm",
        "nuget",
        "pep621",
        "pip-compile",
        "pip_requirements",
        "pip_setup",
        "pub",
        "swift",
        "terraform"
      ]
    },
    {
      "description": ["開発用依存関係のコミットスコープをdeps-devにします"],
      "semanticCommitScope": "deps-dev",
      "matchDepTypes": [
        "build",
        "build-dependencies",
        "dev",
        "dev-dependencies",
        "dev-packages",
        "devDependencies",
        "dev_dependencies",
        "development",
        "plugin",
        "require-dev",
        "test",
        "tool"
      ]
    },
    {
      "description": ["Node.jsのバージョンは破壊的変更を避けたいので更新を無効化します"],
      "enabled": false,
      "matchPackageNames": ["@types/node"],
      "matchUpdateTypes": ["major"]
    }
  ]
}
